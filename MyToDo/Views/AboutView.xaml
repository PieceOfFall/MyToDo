                <TextBlock FontWeight="Bold" Text="QQ  : "  Margin="0,13"/>
                <TextBox IsReadOnly="True" Margin="0,10" FontWeight="Bold" Text="940313262" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                <TextBlock FontWeight="Bold" Text="邮箱 : "  Margin="0,13"/>
                <TextBox IsReadOnly="True" Margin="0,10" FontWeight="Bold" Text="940313262@qq.com" />
